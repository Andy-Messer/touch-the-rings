<Rules>
    FloatLayout:
        size: root.size_window
        Button:
            background_color: (0,0,0,0)
    BoxLayout:
        size: root.size_window
        pos: ( 0, 0)
        Image:
            source: 'rules.jpeg'
            size: self.size
            pos: self.pos
    FloatLayout:
        size: root.size_window
        Button:
            size_hint: (0.2,0.2)
            background_color: (1, 0, 0, 1)
            pos_hint: {"x":0.4, "y":.8}
            font_size: 50
            text: "Return to menu"
            on_press: root.return_Menu()

<Author_widget>
