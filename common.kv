            canvas:
                Color:
                    rgba: (123/255,124/255,160/255 , 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            size_hint: (0.38, 0.38)
            pos_hint:{"x":0.32, "y":.37}
            canvas:
                Color:
                    rgba: (56/255,56/255,209/255, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            size_hint: (0.30, 0.20)
            pos_hint:{"x":0.36, "y":.50}

            Label:
                font_size: 70
                markup: True
                text: "[color=8586aa]" + str("On Pause") + "[/color]"


        BoxLayout:
            size_hint: (0.10, 0.09)
            pos_hint:{"x":0.35+0.04, "y":.37+0.03}
            Button:
                on_press: root.MainMenu()
                font_size: 40
                markup: True
                background_color: (123/255,124/255,160/255, 1)
                text: "[color=3838d1]" + str("Menu") + "[/color]"
        BoxLayout:
            size_hint: (0.10, 0.09)
