        size: root.size_window
        Button:
            background_color: (0,0,0,0)
    BoxLayout:
        size: root.size_window
        canvas:
            Color:
                rgb: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            font_size: 50
            text: "It's my python Project in University 'MIPT'. P.s. Krotov Andrey Ð‘05-021"
